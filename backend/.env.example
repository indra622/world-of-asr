# 서버 설정
HOST=0.0.0.0
PORT=8000
RELOAD=true

# 데이터베이스
DATABASE_URL=sqlite+aiosqlite:///./storage/woa.db

# 스토리지
UPLOAD_DIR=./storage/uploads
RESULT_DIR=./storage/results
TEMP_DIR=./storage/temp

# Hugging Face (Diarization 모델)
HF_TOKEN=your_huggingface_token_here

# Docker (FastConformer)
CONTAINER_ID=
IP_ADDR=

# 보안
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# 파일 업로드 제한
MAX_FILE_SIZE=524288000  # 500MB
MAX_FILES=10

# GPU 설정
DEFAULT_DEVICE=cuda
MAX_CONCURRENT_JOBS=3

# 외부 ASR 제공자
ENABLE_GOOGLE=false
GOOGLE_PROJECT_ID=
GOOGLE_LOCATION=global
GOOGLE_API_KEY=

ENABLE_QWEN=false
QWEN_API_KEY=
QWEN_ENDPOINT=

# NVIDIA providers
ENABLE_NEMO=false
NEMO_CONTAINER_ID=
ENABLE_TRITON=false
TRITON_URL=http://localhost:8000
ENABLE_RIVA=false
RIVA_URL=
